<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/recipe_detail_bookmark_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipe_detail_title"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:text="@string/recipe_detail_title"
                android:textFontWeight="700"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/add_to_bookmark_button"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/ic_bookmark" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_detail_image_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/recipe_detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_detail_ingredient_title_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#4066D37E"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/recipe_detail_ingredient_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="3dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:text="@string/recipe_detail_ingredient_title"
                android:textSize="17sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recipe_detail_ingredient_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_detail_ingredient_list"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_detail_nutrition_title_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#4066D37E"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/recipe_detail_nutrition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="3dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:text="@string/recipe_detail_nutrition_title"
                android:textSize="17sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recipe_detail_nutrition_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_detail_nutrition_list"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_detail_instructions_title_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#4066D37E"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/recipe_detail_instructions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="3dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:text="@string/recipe_detail_instructions_title"
                android:textSize="17sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recipe_detail_instructions_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_detail_instructions_list"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recipe_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe ID" />


    </LinearLayout>
</ScrollView>