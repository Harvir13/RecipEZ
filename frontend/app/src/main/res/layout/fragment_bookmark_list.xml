<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/bookmark_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookmarked_list_title_text" />

    <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_chevron_left" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/bookmark_list_search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:iconifiedByDefault="false"
            app:queryHint="Search bookmarked recipe" />

    <ListView
        android:id="@+id/bookmarked_recipes_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>